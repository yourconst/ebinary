    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Jest run current file",
          "program": "${workspaceFolder}/node_modules/jest-cli/bin/jest",
          "args": [
            "${relativeFile}",
            "--verbose",
            "-i",
            "--forceExit",
            "--no-cache",
            "--detectOpenHandles",
            "--logHeapUsage"
          ],
          "skipFiles": [
              "!<node_internals>/**"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "runtimeExecutable1": "${NVM_BIN}/node",
          "runtimeExecutable": "/home/victory/.nvm/versions/node/v24.11.1/bin/node"
        }
    ]
}